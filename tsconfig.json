{
    "compilerOptions": {
        "target": "es5",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "removeComments": true,
        "baseUrl": "./src",
        "module": "commonjs",
        "lib": [
            "es2017",
            "dom"
        ],
        "jsx": "react",
        "moduleResolution": "node",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node",
            "react",
            "react-dom"
        ]
    },
    "filesGlog": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}